background yes
use_xft yes
xftfont monospace:size=9
xftalpha 1
update_interval 1.0
total_run_times 0
own_window yes
own_window_argb_visual yes
own_window_argb_value 72
#own_window_transparent yes
own_window_type desktop
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_colour black
double_buffer yes
minimum_size 1 1
maximum_width 240
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
default_color Sandy Brown
default_shade_color 000000
default_outline_color d9d7d6
alignment tr
gap_x 12
gap_y 40
no_buffers yes
uppercase no
cpu_avg_samples 2
net_avg_samples 2
override_utf8_locale yes
color1 red
color2 gray
##############################################
#  Output
##############################################
TEXT
${color Orange}${font 文泉驿正黑:bold:size=8}SYSTEM ${hr 2}
${color #8844ee}${font 文泉驿正黑:normal:size=8}CPU1: ${color #22ccff}$alignr${cpu cpu1}%
${color lightgrey}${cpubar cpu1}
${color #8844ee}${font 文泉驿正黑:normal:size=8}CPU2: ${color #22ccff}$alignr${cpu cpu2}%
${color lightgrey}${cpubar cpu2}
${color #8844ee}${font 文泉驿正黑:normal:size=8}RAM: ${color #22ccff}$alignr$mem/$memmax
${color lightgrey}$membar

${color Orange}${font 文泉驿正黑:bold:size=8}NETWORK ${hr 2}
${color Orchid}${font 文泉驿正黑:bold:size=8}Wireless:
${color skyblue}${font 文泉驿正黑:normal:size=8}Up:${color yellow} ${upspeed eth1}/s${color lightgrey}${goto 100}Down:${color #22ccff} ${downspeed eth1}/s
${color Orchid}${font 文泉驿正黑:bold:size=8}Wired:
${color skyblue}${font 文泉驿正黑:normal:size=8}Up:${color yellow} ${upspeed enp9s0}/s ${color lightgrey}${goto 100}Down:${color #22ccff} ${downspeed enp9s0}/s

${color Orange}${font 文泉驿正黑:bold:size=8}TIME ${hr 2}
${voffset -4}${font 文泉驿正黑:size=32}${time %R}${font 文泉驿正黑:size=10}:${time %S}
${voffset -40}${color8}${font 文泉驿正黑:size=12}${alignr 0}${time %d/%b}${font}
${font 文泉驿正黑:size=10}${alignr 0}${time %a}

${color Orange}${font 文泉驿正黑:bold:size=8}INFORMATION ${hr 2}
${color skyblue}$alignc${font 文泉驿正黑:normal:size=8}$sysname $kernel on $machine
${exec whoami} @ $nodename for $uptime
